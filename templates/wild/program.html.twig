{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="media">
            <img class="align-self-start mr-3 w-25" src="{{program.poster}}" alt="{{ program.title }} poster">
            <div class="media-body">
                <h1 class="mt-0">{{ program.title }}</h1>
                <p>{{ program.summary }}</p>
                <p>Categorie : {{ program.category.name }}</p>
            </div>
        </div>

        {% for season in seasons %}
        <div class="card">
            <div class="card-body">
                <h2>Saison {{ season.number }} - {{ season.year }}</h2>
                <p>{{ season.description }}</p>
                <a class="btn btn-primary" href="{{ path('show_season', {id: season.id}) }}">Voir les Ã©pisodes</a>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}