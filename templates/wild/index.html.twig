{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <br>
    <div class="container">
    <h1>Toutes les séries</h1>
        {{ form_start(form) }}
        {{ form_row(form.searchField) }}
        <button class="btn btn-primary" type="submit" name="btnSearch">Rechercher</button>
        {{ form_end(form) }}
        <br>
    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
    </div>
{% endblock %}