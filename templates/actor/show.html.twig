{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Acteur</h1>
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ actor.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ actor.name }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ actor.slug }}</td>
        </tr>
        </tbody>
    </table>
    <ul>
        {% for program in actor.programs %}
            <li><a href="{{ path('program_show', {'slug': program.slug}) }}">{{ program.title }}</a></li>
        {% else %}
            <li>Aucune s√©rie pour cet acteur</li>
        {% endfor %}
    </ul>
{% endblock %}
