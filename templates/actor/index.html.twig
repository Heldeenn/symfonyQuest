{% extends 'base.html.twig' %}

{% block title %}Actors index{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>Index des acteurs</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for actor in actors %}
                <tr>
                    <td>{{ actor.id }}</td>
                    <td>{{ actor.name }}</td>
                    <td>{{ actor.slug }}</td>
                    <td>
                        <a href="{{ path('actor_show', {'slug': actor.slug}) }}">Voir</a>
                        <a href="{{ path('actor_edit', {'slug': actor.slug}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a type="button" class="btn btn-primary" href="{{ path('actor_new') }}">Ajouter un nouvel acteur</a>
    </div>
{% endblock %}
