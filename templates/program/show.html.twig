{% extends 'base.html.twig' %}

{% block title %}Série{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1>Série</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ program.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ program.title }}</td>
            </tr>
            <tr>
                <th>Résumé</th>
                <td>{{ program.summary }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ program.poster }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('program_index') }}">Retour à la liste</a>

    <a href="{{ path('program_edit', {'id': program.id}) }}">Modifier</a>

    {{ include('program/_delete_form.html.twig') }}
</div>
{% endblock %}
